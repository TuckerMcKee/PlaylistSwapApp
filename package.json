{
  "name": "playlist-swap-app",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm run dev --prefix client",
    "dev": "concurrently -k -n server,client \"npm:server\" \"npm:client\"",
    "build": "npm run build:client",
    "build:client": "cd client && npm install && npm run build",
    "heroku-postbuild": "npm ci --prefix client --include=dev && npm run build --prefix client && npm prune --omit=dev --prefix client",
    "test": "npm run test:server && npm run test:client",
    "test:server": "npm --prefix server test",
    "test:client": "npm --prefix client test",
    "db:init": "bash scripts/setup_db.sh",
    "db:reset": "dropdb playlistswap || true && npm run db:init",
    "db:schema": "psql \"$DATABASE_URL\" -v ON_ERROR_STOP=1 -f server/db/schema.sql"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.1.2",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "googleapis": "^148.0.0",
    "he": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "react-spinners": "^0.17.0",
    "redis": "^5.7.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "jest": "^30.1.3",
    "nodemon": "^3.1.9"
  }
}
